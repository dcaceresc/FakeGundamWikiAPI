@using FakeGundamWikiAPI.Areas.Maintainer.Models.Examples
@model IList<ExampleDto>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Examples";
}

<div class="card mt-3">
    <div class="card-header bg-primary d-flex justify-content-between align-items-center">
        <h2>@ViewData["Title"]</h2>
        <a onclick="modalOpen('@Url.Action("Create","Examples", new { area = "Maintainer"})','New Example')" class="btn btn-success text-white">Create Example</a>
    </div>
    <div class="card-body">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Code</th>
                    <th>Result</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ExampleId</td>
                        <td>@item.ExampleName</td>
                        <td>@(item.ExampleCode.Length > 50 ? item.ExampleCode.Substring(0,50) + "..." : item.ExampleCode)</td>
                        <td>@(item.ExampleResult != null && item.ExampleResult.Length > 50 ? item.ExampleResult.Substring(0, 50) + "..." : item.ExampleResult)</td>
                        <td>
                            <a onclick="modalOpen('@Url.Action("Edit","Examples", new { area = "Maintainer", id = item.ExampleId})','Edit ExampleType')" class="btn btn-primary text-white">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-action="Toggle" asp-route-id="@item.ExampleId" class="btn @(item.IsActive ? "btn-warning" : "btn-success") text-white">
                                <i class="bi @(item.IsActive ? "bi-pause" : "bi-play")"></i>
                                @(item.IsActive ? "Pausar" : "Reanudar")
                            </a>
                        </td>
                    </tr>
                }
        </table>
    </div>
</div>