<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FakeGundamWikiAPI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FakeGundamWikiAPI.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-dark navbar-expand-lg border-bottom border-body">

            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" >Fake Gundam Wiki API</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Docs" asp-action="Index">
                                <i class="bi bi-journal-text"></i> Docs
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="https://github.com/dcaceresc/FakeGundamWikiAPI" target="_blank">
                                <i class="bi bi-github"></i> GitHub
                            </a>
                        </li>
                        <li class="nav-item">
                            <div class="vr d-none d-lg-flex h-100 mx-lg-2 text-white"></div>
                        </li>
                        <li class="nav-item dropdown">
                            <button class="btn btn-bd-primary dropdown-toggle d-flex align-items-center"
                                    id="bd-theme"
                                    type="button"
                                    aria-expanded="false"
                                    data-bs-toggle="dropdown"
                                    aria-label="Toggle theme (auto)">
                                <i class="bi  theme-icon-active bi-circle-half" ><use href="#circle-half"></use></i>
                                <span class="visually-hidden" id="bd-theme-text">Toggle theme</span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <button type="button" class="dropdown-item d-flex align-items-center" data-bs-theme-value="light" aria-pressed="false">
                                        <i class="bi me-2 opacity-50 bi-sun-fill"></i>
                                        Light
                                        <svg class="bi ms-auto d-none" width="1em" height="1em"><use href="#check2"></use></svg>
                                    </button>
                                </li>
                                <li>
                                    <button type="button" class="dropdown-item d-flex align-items-center" data-bs-theme-value="dark" aria-pressed="false">
                                        <i class="bi me-2 opacity-50 bi-moon-stars-fill"></i>
                                        Dark
                                        <svg class="bi ms-auto d-none" width="1em" height="1em"><use href="#check2"></use></svg>
                                    </button>
                                </li>
                                <li>
                                    <button type="button" class="dropdown-item d-flex align-items-center active" data-bs-theme-value="auto" aria-pressed="true">
                                        <i class="bi me-2 opacity-50 bi-circle-half"></i>
                                        Auto
                                        <svg class="bi ms-auto d-none" width="1em" height="1em"><use href="#check2"></use></svg>
                                    </button>
                                </li>
                            </ul>
                        </li>
                    </ul>

                    <div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - FakeGundamWikiAPI 
        </div>
    </footer>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
