<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FakeGundamWikiAPI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FakeGundamWikiAPI.styles.css" asp-append-version="true" />
</head>
<body>
    
    <partial name="_Header.cshtml" />

    <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasExampleLabel">Administrador</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <ul class="navbar-nav ml-auto">
                <li nav-item>
                    <a class="nav-link" asp-area="Maintainer" asp-controller="Examples" asp-action="Index">Examples</a>
                </li>
                <li nav-item>
                    <a class="nav-link" asp-area="Maintainer" asp-controller="ExampleTypes" asp-action="Index">ExampleTypes</a>
                </li>
            </ul>
        </div>
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <partial name="_modal.cshtml" />
   

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - FakeGundamWikiAPI 
        </div>
    </footer>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
